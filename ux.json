{
    "scss": {
        "src": [
            "styles/**/*.scss",
            "node_modules/@unumux/components/_*.scss",
            "node_modules/@unumux/components/@(components|base-elements|utilities)/_*.scss",
            "node_modules/@unumux/components/@(components|base-elements|utilities)/**/_*.scss",
            "node_modules/@unumux/theme-enterprise-default/_*.scss",            
            "node_modules/@unumux/theme-enterprise-default/**/_*.scss"
        ],
        "dest": "styles"
    },
    "js": {
        "src": "scripts/**/*.js",
        "dest": "scripts",
        "main": "scripts/site.js"
    },
    "watch": [
        "index.html"
    ],
    "server": true,
    "compileJs": true,
    "proxy": false
}